{
  "name": "@outblock/flow-mcp",
  "version": "0.1.1",
  "description": "Flow blockchain tools for Model Context Protocol (MCP)",
  "author": {
    "name": "Outblock",
    "url": "https://outblock.io",
    "github": "https://github.com/outblock"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outblock/flow-mcp.git"
  },
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "flow-mcp": "dist/bin/flow-mcp.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "keywords": [
    "flow",
    "blockchain",
    "mcp",
    "model-context-protocol",
    "cli"
  ],
  "scripts": {
    "build": "tsup",
    "test": "bun test",
    "format": "biome format . --write",
    "start": "bun dist/index.js",
    "dev": "fastmcp dev src/index.ts",
    "inspect": "fastmcp inspect src/index.ts"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/yargs": "^17.0.33",
    "bun-types": "^1.2.9",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@onflow/fcl": "^1.4.0",
    "@onflow/types": "^1.1.0",
    "fastmcp": "^1.21.0",
    "yargs": "^17.7.2",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/bin/flow-mcp.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "splitting": true,
    "sourcemap": true,
    "clean": true
  }
}
